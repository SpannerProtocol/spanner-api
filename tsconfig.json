{
    "extends": "@open-web3/dev-config/config/tsconfig.json",
    "exclude": [
    "build/**/*",
    "**/build/**/*"
],
    "compilerOptions": {
    "target": "es2019",
        "module": "CommonJS",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
        "@spanner/api": [
            "packages/api/src"
        ],
            "@spanner/api/*": [
            "packages/api/src/*"
        ],
            "@spanner/types": [
            "packages/types/src"
        ],
            "@spanner/types/*": [
            "packages/types/src/*"
        ],
            "@spanner/type-definitions": [
            "packages/type-definitions/src"
        ],
            "@spanner/type-definitions/*": [
            "packages/type-definitions/src/*"
        ],
    },
    "skipLibCheck": true,
        "typeRoots": [
        "./node_modules/@polkadot/ts",
        "./node_modules/@types"
    ]
}
}
